CURLcode curl_post(CURL *kurl, char *formFields){
    // curl_easy_setopt(kurl, CURLOPT_FOLLOWLOCATION, 1L);
    // curl_easy_setopt(kurl, CURLOPT_MAXREDIRS, 3L);

    curl_easy_setopt(kurl, CURLOPT_POST, 1L);

    curl_easy_setopt(kurl, CURLOPT_POSTFIELDS, formFields);

    return curl_easy_perform(kurl);
}
